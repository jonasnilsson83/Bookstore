@model Domain.Interface.IBook

@{
    ViewBag.Title = "Details";
}

<div>
    <h4>Book details</h4>
    <hr />
    <div class="row">
        <div class="col-6">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Author)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Author)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.InStock)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.InStock)
                </dd>
                <dd>
                    @if (Model.InStock != 0)
                    {
                        <form action="~/Cart/Edit/@Model.InternalId" method="post" >
                            <p>
                                @Html.AntiForgeryToken()
                                <button class="btn btn-primary fa fa-shopping-cart" type="submit" id="button-addon"> Buy</button>
                            </p>
                        </form>
                    }
                    else
                    {
                        <button class="btn btn-primary disabled fa fa-shopping-cart" type="submit" id="button-addon2">Sorry, out of stock</button>
                    }


                    
                </dd>
            </dl>

        </div>
        <div class="col-6">
            <img class="disabled" src="~/Content/Images/OpenBook.jpg" height="240" width="300" />

        </div>

    </div>



    <div>
        <div>
            <a href="@Request.UrlReferrer" class="btn " title="Back to list">
                <span class="fa fa-arrow-left" aria-hidden="true">Go back</span>
            </a>
        </div>
    </div>
</div>